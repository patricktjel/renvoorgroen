<ScrollView xmlns:ProgressWheel="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efefef"
    android:orientation="vertical"
    android:padding="10dp" >

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:background="#efefef" >
      

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="5dp"
         android:orientation="vertical" 
         android:gravity="center"
         android:background="@drawable/footsteps"
         >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Steps"
            android:padding="5dp"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/tv_Steps"
               android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1500"
            android:padding="5dp"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <nl.rrp.renvoorgroen.view.ProgressWheel
            android:id="@+id/progressBarTwo"
            android:layout_width="wrap_content"
            android:layout_height="125dp"
            android:layout_gravity="center"
            ProgressWheel:barLength="60dp"
            ProgressWheel:barWidth="25dp"
            ProgressWheel:rimColor="#44000000"
            ProgressWheel:rimWidth="25dp"
            ProgressWheel:spinSpeed="3dp"
            ProgressWheel:barColor="@android:color/holo_green_light"
            ProgressWheel:textSize="14sp"
          />
    </LinearLayout>
    
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="5dp"
             android:background="@drawable/running"
         android:orientation="vertical" 
         android:gravity="center"
         >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Distance"
            android:padding="5dp"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/tv_Distance"
               android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15.9 km"
            android:padding="5dp"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <nl.rrp.renvoorgroen.view.ProgressWheel
            android:id="@+id/progressBarThree"
            android:layout_width="wrap_content"
            android:layout_height="125dp"
            android:layout_gravity="center"
            ProgressWheel:barLength="60dp"
            ProgressWheel:barWidth="25dp"
            ProgressWheel:rimColor="#44000000"
            ProgressWheel:rimWidth="25dp"
            ProgressWheel:spinSpeed="3dp"
            ProgressWheel:barColor="@android:color/holo_green_light"
            ProgressWheel:textSize="14sp"
            />
    </LinearLayout>
    
     
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="5dp"
             android:background="@drawable/stair"
         android:orientation="vertical" 
         android:gravity="center"
         >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Floors"
            android:padding="5dp"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/tv_Floor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            android:padding="5dp"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <nl.rrp.renvoorgroen.view.ProgressWheel
            android:id="@+id/progressBarOne"
            android:layout_width="wrap_content"
            android:layout_height="125dp"
            android:layout_gravity="center"
            ProgressWheel:barLength="60dp"
            ProgressWheel:barWidth="25dp"
            ProgressWheel:rimColor="#44000000"
            ProgressWheel:rimWidth="25dp"
            ProgressWheel:spinSpeed="3dp"
            ProgressWheel:barColor="@android:color/holo_green_light"
            ProgressWheel:textSize="14sp"
       />
    </LinearLayout>

</LinearLayout>

  

</ScrollView>